<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tablero de mensajes</title>
    <link href="/bootstrap.min.css" rel="stylesheet">
    <script src="/jquery-3.5.1.min.js"></script>
    <script src="/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/static/css/styles.css">
  </head>
  <body class="colorfondo">
    <h2 class="m-5 feizvuk">feizvuk :v</h2>
    <div class="container">
      <div class="row">
        <div class="col-6 offset-2 colorPublicacion p-3">
          <form action="/" method="post">
            <div class="col-6 form-floating mb-3">
              <input type="text" class="form-control" id="floatingInput" name="name" required>
              <label class="black" for="floatingInput">Name</label>
            </div>
            <div class="form-floating">
              <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" name="message" required></textarea>
              <label class="black" for="floatingTextarea2">Mesagge</label>
              <button type="submit" class=" btn btn-primary mt-3 float">Send</button>
            </div>
          </form>
        </div>
        <div class="col-6 offset-2 mt-5 colorPublicacion p-4">
          <% for (messages of msg) { %>
            <h2>User: <%= messages.name %></h2>
            <h4>message: <%= messages.message %></h4><br>
            <div class="colorComentario p-3">
              <div class="Comentario<%= messages.id %> slide">
                <% for (com of messages.Comments) { %>
                  <h4>User: <%= com.name %></h4>
                  <h6>message: <%= com.comment %></h6>
                <%}%>
                <form action="/comment" method="post">
                  <input type="hidden" name="msgId" value="<%= messages.id %>">
                  <div class="col-6 form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" name="name" required>
                    <label class="black" for="floatingInput">Name</label>
                  </div>
                  <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" name="comment" required></textarea>
                    <label class="black" for="floatingTextarea2">comment</label>
                    <button type="submit" class="float btn btn-primary mt-2 mb-2">comment</button>
                  </div>
                </form>
              </div> 
              <p class=" btn btn-primary mt-2 mb-2" id="<%= messages.id %>">view comentaries</p>
            </div><br> 
          <%}%>
        </div>
      </div>
    </div>
    <script>
      $(document).ready(function(){
        $(`.slide`).slideUp();
        $(`p`).on('click', function(){
          let id = $(this).attr('id');
          $(`.Comentario${id}`).slideToggle();
          console.log(id)
        });
      }); 
    </script>
  </body>
</html>